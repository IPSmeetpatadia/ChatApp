<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blur1_aquamarine1"
    android:padding="30dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/updateUser_layoutCam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/updateImg_cam"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/outline_camera_alt_24"
            app:layout_constraintEnd_toEndOf="@id/updateImg_txtCam"
            app:layout_constraintStart_toStartOf="@id/updateImg_txtCam"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/updateImg_txtCam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Camera"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/updateImg_cam" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/updateUser_layoutGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        app:layout_constraintStart_toEndOf="@id/updateUser_layoutCam"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/updateImg_gallery"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/outline_image_24"
            app:layout_constraintEnd_toEndOf="@id/updateImg_txtGallery"
            app:layout_constraintStart_toStartOf="@id/updateImg_txtGallery"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/updateImg_txtGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gallery"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/updateImg_gallery" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
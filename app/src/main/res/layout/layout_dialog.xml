<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_dialog"
    android:padding="20dp">

    <ImageView
        android:id="@+id/imgLogOut"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_logout_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/aquamarine5" />

    <TextView
        android:id="@+id/txtConform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Are you sure want to \n Sign out?"
        android:textAlignment="center"
        android:textColor="@color/aquamarine6"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgLogOut" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/txtConform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/signOut_yes"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@drawable/shape_txtv_dialog"
            android:backgroundTint="@color/aquamarine4"/>

        <TextView
            android:id="@+id/signOut_no"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="No"
            android:textColor="@color/aquamarine4"
            android:layout_marginLeft="20dp"
            android:textAlignment="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@drawable/shape_txtv_dialog"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>